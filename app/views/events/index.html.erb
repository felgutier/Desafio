<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.start_time.strftime("%F %T") %></td>
          <td><%= event.end_time.strftime("%F %T") %></td>
          <td><%= link_to 'Show', event, class: 'btn btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn btn-primary' %></td>
          <td><%= link_to 'Destroy', event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'New Event', new_event_path, class: 'btn btn btn-primary' %>
  <br>
</div>
<br>
